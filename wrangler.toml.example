# Cloudflare Workers configuration template
# Copy this file to wrangler.toml and fill in your values
# DO NOT commit wrangler.toml to version control

name = "elongoat"
main = "src/index.ts"
compatibility_date = "2024-01-01"

# Account ID - Use environment variable instead of hardcoding
# Set CLOUDFLARE_ACCOUNT_ID in your environment or CI/CD secrets
# account_id = "your_account_id"

# Custom domain (optional)
# routes = [
#   { pattern = "elongoat.io/*", zone_name = "elongoat.io" }
# ]

# Environment variables (non-sensitive)
[vars]
ENVIRONMENT = "production"

# Secrets (set via wrangler secret put <NAME>)
# - VECTORENGINE_API_KEY
# - DATABASE_URL
# - REDIS_URL
# - ELONGOAT_ADMIN_TOKEN

# KV Namespace bindings (if using KV storage)
# [[kv_namespaces]]
# binding = "CACHE"
# id = "your_kv_namespace_id"

# D1 Database bindings (if using D1)
# [[d1_databases]]
# binding = "DB"
# database_name = "elongoat"
# database_id = "your_d1_database_id"

# Note: Current architecture uses VPS + Cloudflare CDN proxy
# This template is for future migration to Cloudflare Workers if needed
